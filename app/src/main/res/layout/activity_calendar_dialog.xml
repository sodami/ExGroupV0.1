<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calendar_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.google.slashb410.exgroup.ui.mypage.Calendar.CalendarDialogActivity">

    <TextView
        android:text="2017-02-27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/today" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="식단 인증 사진"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/picture" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/camera_black"
            android:id="@+id/calendarfood" />

        <TextView
            android:id="@+id/FoodSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="한줄요약"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="몸무게 인증사진"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/weight" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/camera_black"
            android:id="@+id/calendarweigth" />

    </LinearLayout>

</LinearLayout>
