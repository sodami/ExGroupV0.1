<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_input_init1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.google.slashb410.exgroup.ui.join.InputInit1Activity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/text_big" />
<TextView
    android:text="@string/age_unit"
    android:textSize="@dimen/text_defalt"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/text_defalt" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_weight="1"
                android:id="@+id/height"
                android:inputType="number"
                android:hint="@string/height"
                android:layout_width="0dp"
                android:layout_height="@dimen/text_big" />
            <TextView
                android:text="@string/height_unit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_defalt" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_weight="1"
                android:inputType="number"
                android:id="@+id/weight"
                android:hint="@string/weight"
                android:layout_width="0dp"
                android:layout_height="@dimen/text_big" />
            <TextView
                android:text="@string/weight_unit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_defalt" />
        </LinearLayout>
        <TextView
            android:text="@string/info_bmi"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_small"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:text="다음으로"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/nextBtn3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/gmd_button_height"
        android:layout_margin="@dimen/gmd_button_margin"/>
</RelativeLayout>
