<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/menu_group_calendar_list"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/scale_black" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_group_calendar_list"
        android:layout_width="@dimen/gmd_button_height"
        android:layout_height="@dimen/gmd_button_height"
        android:padding="@dimen/gmd_margin_default"
        android:src="@drawable/com_facebook_profile_picture_blank_square" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nickname_group_calendar_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="닉네임"
                android:textSize="@dimen/text_default"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateNtime_group_calendar_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="2017년 2월 7일 13시 30분"
                android:textColor="#888888"
                android:textSize="@dimen/text_small" />
        </LinearLayout>

        <TextView
            android:id="@+id/summary_group_calendar_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gmd_margin_default"
            android:text="줄넘기 500번 30분(서머리)"
            android:textSize="@dimen/text_default" />
    </LinearLayout>
</LinearLayout>