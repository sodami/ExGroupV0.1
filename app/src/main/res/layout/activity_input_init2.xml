<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_input_init2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.google.slashb410.exgroup.ui.join.InputInit2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:text="당신의 BMI지수는 00입니다."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:hint="@string/wannabeKg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_big" />
        <TextView
            android:text="@string/weight_unit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_default" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:background="@drawable/button_white"
        android:text="다음으로"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/nextBtn4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/gmd_button_height"
        android:layout_margin="@dimen/gmd_button_margin"/>
</RelativeLayout>
